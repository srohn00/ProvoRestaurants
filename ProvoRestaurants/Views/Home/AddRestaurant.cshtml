@{
    ViewData["Title"] = "Recommend a Restaurant";
}
@model ProvoRestaurants.Models.AddRestaurant

<form asp-action="AddRestaurant" method="post">
    <div>
        <label asp-for="Name">Name: </label>
        <input asp-for="Name" />
    </div>
    <div>
        <label asp-for="RestaurantName">Restaurant Name: </label>
        <input asp-for="RestaurantName" />
    </div>
    <div>
        <label asp-for="FavoriteDish">Favorite Dish: </label>
        <input asp-for="FavoriteDish" />
    </div>
    <div>
        <label asp-for="Phone">Phone: </label>
        <input asp-for="Phone" />
    </div>

    <button type="submit">Submit Your Recommendation</button>
</form>